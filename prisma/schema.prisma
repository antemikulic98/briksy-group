generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CLIENT
}

enum ProjectStatus {
  AKTIVAN
  ZAVRSEN
  PAUZIRAN
}

enum PhaseStatus {
  NA_CEKANJU
  U_TIJEKU
  ZAVRSENA
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(CLIENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects   Project[]
  comments   Comment[]
  documents  Document[]
  activities Activity[]
}

model Project {
  id          String        @id @default(cuid())
  name        String
  description String?
  status      ProjectStatus @default(AKTIVAN)
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  clientId String
  client   User   @relation(fields: [clientId], references: [id], onDelete: Cascade)

  phases     Phase[]
  comments   Comment[]
  documents  Document[]
  activities Activity[]
}

model Phase {
  id          String      @id @default(cuid())
  name        String
  description String?
  status      PhaseStatus @default(NA_CEKANJU)
  percentage  Int         @default(0)
  order       Int         @default(0)
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())

  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Document {
  id        String   @id @default(cuid())
  name      String
  key       String
  size      Int
  type      String
  createdAt DateTime @default(now())

  uploadedById String
  uploadedBy   User    @relation(fields: [uploadedById], references: [id], onDelete: Cascade)
  projectId    String
  project      Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Activity {
  id        String   @id @default(cuid())
  type      String
  message   String
  createdAt DateTime @default(now())

  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Inquiry {
  id          String   @id @default(cuid())
  name        String
  company     String
  email       String
  phone       String?
  industry    String
  companySize String
  budget      String
  message     String
  read        Boolean  @default(false)
  createdAt   DateTime @default(now())
}
